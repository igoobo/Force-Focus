# .env 파일 예시 (MongoDB 기반)

# MongoDB 연결 정보
# 중요: 호스트 이름으로 'localhost'가 아닌, docker-compose에 정의된 서비스 이름 'mongodb'를 사용해야 합니다.
MONGO_URI=mongodb://${MONGO_INITDB_ROOT_USERNAME}:${MONGO_INITDB_ROOT_PASSWORD}@mongodb:27017/
MONGO_DB_NAME=force_focus_db

# MongoDB 루트 계정 정보 (초기 설정용)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password # 실제 프로젝트에서는 더 강력한 비밀번호 사용

# 애플리케이션 보안 비밀 키
SECRET_KEY="YOUR_SUPER_SECRET_KEY_HERE"